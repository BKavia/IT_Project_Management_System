@model IT_Project_Management_System.Models.Comment

@using (Ajax.BeginForm("Create", "Comments", new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    AllowCache = false,
    UpdateTargetId = "CommentsAddDiv"
}))
{
<fieldset>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.HiddenFor(model => model.TaskID, Model.TaskID)
            <div class="col-md-10">
                @Html.EditorFor(model => model.CommentText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CommentText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    </div>
    </fieldset>

}

