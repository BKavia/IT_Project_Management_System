@model IT_Project_Management_System.Models.Document

@using (Ajax.BeginForm("Create", "Documents", new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    AllowCache = false,
    UpdateTargetId = "AttachmentAddDiv"
}))
{
    <fieldset>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.HiddenFor(model => model.TaskID, Model.TaskID)
                <div class="col-md-10">
                    @Html.EditorFor(model => model.File, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>

        </div>
    </fieldset>

}


